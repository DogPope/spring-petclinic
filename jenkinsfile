pipeline {
    agent { docker { image 'bitnami/gradle' } }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'credential-id', url: 'https://github.com/DogPope/spring-petclinic.git'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
        stage('Test') {
            steps {
                sh './gradlew test'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy Still has to be done."
                // Deployment Goes here.
            }
        }
    }
}