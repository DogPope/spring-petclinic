pipeline {
    agent { docker { image 'bitnami/gradle' } }
    stages {
        stage('Build') {
            steps {
                echo 'Building'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
        stage('Deploy') {
            steps {
                sh './gradlew build'
            }
        }
    }
}